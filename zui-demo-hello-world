# Started from Zle or from command line

-zui_stdlib_cleanup deserialize:"zui-demo-hello-world"
-zui_stdlib_init app:"zui-demo-hello-world" app_name:"ZUI Hello World"

emulate -LR zsh -o extendedglob -o typesetsilent -o warncreateglobal

-zui_stdlib_init2 # after emulate -LR

-zui_stdlib_store_default_app_config b:border 1

# Generator for module 1
demo_mod1_generator() {
    local mod="$1" ice="$2"

    # Content, no hyper-links
    reply=( "Hello World from ${ZUI[YELLOW]}ZUI${ZUI[COLOR_END]}! Module $mod, instance $ice." )

    # Non-selectable lines   Hops to jump with [ and ]   Local anchors
    reply2=( )               reply3=( 1 )                reply4=( )
}

## Start application ##
zui-event-loop 1:demo_mod1_generator

-zui_stdlib_cleanup serialize

return 0

# vim:ft=zsh
